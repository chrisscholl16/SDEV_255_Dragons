    <!--Showcase or main header area-->
    <section class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h1>Become a <span class="text-warning">
                        Dragon!!
                    </span></h1>
                    
                    
<!--Form to add teachers-->
                    <div class="modal-body">
                        <p class="lead">Fill out this form to add a course</p>

                        <form>
                          <div class="mb-3">
                              <label for="course-name" class="col-form-label">
                                  Course Name:
                              </label>
                              <input type="text" class="form-control" id="course-name">
                          </div>
                          <div class="mb-3">
                            <label for="courseDescription" class="col-form-label">
                                Course Description:
                            </label>
                            <textarea class="form-control" id="courseDescription" name="courseDescription" rows="4" cols="50">
                            </textarea>
                        </div>
                          <div class="mb-3">
                              <label for="subject-area" class="col-form-label">
                                Subject Area:
                              </label>
                              <input type="text" class="form-control" id="subject-area">
                          </div>
                          <div class="mb-3">
                              <label for="number-of-credits" class="col-form-label">
                                  Number of Credits
                              </label>
                              <input type="number" class="form-control" id="number-of-credits">
                          </div>
                          
                          <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#enroll">Add Course</button>
                          <a href="/coursesIndex" class="btn btn-success btn-lg">
                            <i class="bi bi-chevron-right"></i> Check All Courses
                        </a>
                          
                          


                        </form>
                      </div>

                </div>
                <img class="img-fluid w-50  d-none d-sm-block" src="img/dragonCourse.jpg" alt="">
            </div>
        </div>
    </section>

