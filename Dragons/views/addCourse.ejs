<html lang="en">

    <%- include("./partials/head.ejs") %>

<body>
    <!--Navigation Menu an Bar-->
    <%- include("./partials/nav.ejs") %>

    <!--Showcase or main header area-->
    <section class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h1><span class="text-warning">
                        Add Courses Below!!
                    </span></h1>
                    
                    
<!--Form to add courses-->
                    <div class="modal-body">
                        <p class="lead">Fill out this form to add a course</p>

                        <section>
                            <div class = "create-course content">
                              <form action="/courses/add" method="post">
                                  <label for = "name">Course Name:</label>
                                  <input type = "text" id = "name" name = "name" required>
                                  <label for = "desc">Course Description:</label>
                                  <input type = "text" id = "desc" name = "desc" required>
                                  <label for = "subArea">Subject Area:</label>
                                  <input type = "text" id = "subArea" name = "subArea" required>
                                  <label for = "numcred">Number of Credits</label>
                                  <input type = "text" id = "numcred" name = "numcred" required>
                                 
                                 
                                    <button class="btn btn-success btn-lg bi bi-chevron-right">Add Course</button>
                                    <button class="btn btn-success btn-lg bi bi-chevron-right" onclick="window.location.href = '/courses/coursesIndex';">Check All Courses</button>

                                    
                                    
                          
                        </form>
                        </div>
                        </section>
                      </div>

                </div>
                <img class="img-fluid w-50  d-none d-sm-block" src="../img/dragonCourse.jpg" alt="">
            </div>
        </div>
    </section>

     <!--Newsletter and form-->
     <section class="bg-dark text-light p-5">
        
    </section>


<!-- Footer -->
  <%- include("./partials/footer.ejs") %>
          
     
            
         
