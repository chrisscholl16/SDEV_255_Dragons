<html lang="en">

    <%- include("./partials/head.ejs") %>

<body>
    <!--Navigation Menu an Bar-->
    <%- include("./partials/nav.ejs") %>

    <!--Showcase or main header area-->
    <section class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h1><span class="text-warning">
                        Update Course Below!!
                    </span></h1>
                    
                    
<!--Form to add courses-->
                    <div class="modal-body">
                        <p class="lead">Change course details to update a course</p>

                        <section>
                            <div class = "create-course content">
                              <form action="/courses/updateCourse/<%= course._id%> " method="post">
                                  <label for = "name">Course Name:<%= course.name %></label>
                                  <input type = "text" id = "name" name = "name"  value = "<%= course.name %>" required>
                                  <label for = "desc">Course Description:<%= course.desc%></label>
                                  <input type = "text" id = "desc" name = "desc" value="<%= course.desc%>" required>
                                  <label for = "subArea">Subject Area:</label>
                                  <input type = "text" id = "subArea" name = "subArea" value="<%= course.subArea%>" required>
                                  <label for = "numcred">Number of Credits</label>
                                  <input type = "text" id = "numcred" name = "numcred" value="<%= course.numcred%>" required >
                                  <!--hidden input to have the teacher id who created the course-->
                                  <input type = "text" id = "createdBy" name = "createdBy" style="display:none;" value="<%= teacher._id%>"> 
                                  
                                 
                                    <button class="btn btn-success btn-lg bi bi-chevron-right">Update Course</button>
                            
                        </form>
                        </div>
                        </section>
                      </div>

                </div>
              <!-- <img class="img-fluid w-50  d-none d-sm-block" src=".../img/dragonCourse.jpg" alt="">-->
            </div>
        </div>
    </section>

     <!--Newsletter and form-->
     <section class="bg-dark text-light p-5">
        
    </section>


<!-- Footer -->
  <%- include("./partials/footer.ejs") %>
          
     
            
         
