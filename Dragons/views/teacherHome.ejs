<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <!--Navigation Menu an Bar-->
    <%- include("./partials/nav.ejs") %>

    <!--Showcase or main header area-->
    <section class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h1><span class="text-warning">
                        Become a Dragon!!
                    </span></h1>
                    <p class="lead my-4">
                        We focus on teaching our students the fundamentals of the 
                        latest and greatest technologies to prepare them to be the best Dragon they can be.
                    </p>
                    <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#enroll">Start the Enrollment</button>
                </div>
                <img class="img-fluid w-50 d-none d-sm-block" src="img/eye.jpg" alt="">
            </div>
        </div>
    </section>

    <!--Newsletter and form-->
    <section class="bg-success text-light p-5">
        <div class="container">
            <div class="d-md-flex justify-content-between align-items-center">
                <h3 class="mb-3 mb-md-0">Sign Up To Be A Dragon</h3>

                <div class="input-group news-input">
                    <input type="text" class="form-control" placeholder="Enter Email">
                    <button class="btn btn-dark btn-lg" type="button">Register</button>
                  </div>
            </div>
        </div>
    </section>

    <!--Boxes-->
    <section class="p-5">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md">
                    <div class="card bg-dark text-light">
                        <div class="card-body text center">
                            <div class="h1 mb-3">
                                <i class="bi bi-laptop"></i>
                            </div>
                            <h3 class="card-title mb-3">
                                Courses
                            </h3>
                            <p class="card-text">
                                This is where you go to check the courses you need and want to sign up for. This will go over each course and tell you the times and what you need.
                            </p>
                            <a href="/courses" class="btn btn-danger mt-3">
                                <i class="bi bi-chevron-right"></i> Modify Courses
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="card bg-danger text-light">
                        <div class="card-body text center">
                            <div class="h1 mb-3">
                                <i class="bi bi-person-square"></i>
                            </div>
                            <h3 class="card-title mb-3">
                                Teachers
                            </h3>
                            <p class="card-text">
                                Teachers can come here and check courses and which students will be in your classes. This is a teacher only page, NO STUDENTS ALLOWED!!
                            </p>
                            <a href="/teachers" class="btn btn-success mt-3">
                                <i class="bi bi-chevron-right"></i> Teacher Login
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="card bg-dark text-light">
                        <div class="card-body text center">
                            <div class="h1 mb-3">
                                <i class="bi bi-people"></i>
                            </div>
                            <h3 class="card-title mb-3">
                                Students
                            </h3>
                            <p class="card-text">
                                Students can come to this page and choose your courses and teachers. This will be where you do everything you need to sign up for classes!!!
                            </p>
                            <a href="/courses" class="btn btn-danger mt-3">
                                <i class="bi bi-chevron-right"></i> Student Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



<!--Question Accordion-->
<section id="questions" class="p-5 bg-success text-light">
    <div class="container">
        <h2 class="text-center mb-4">Frequently Asked Questions</h2>
        <div class="accordion accordion-flush" id="questions">